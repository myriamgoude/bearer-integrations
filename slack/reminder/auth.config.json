{
  "authorizationURL": "https://slack.com/oauth/authorize",
  "tokenURL": "https://slack.com/api/oauth.access",
  "authType": "OAUTH2",
  "authorizationParams": {
    "access_type": "offline",
    "consent": true
  },
  "tokenParams": {
    "redirect_uri": "{{CALLBACK_URL_V2}}"
  },
  "config": {
    "accessType": "offline",
    "callbackURL": "{{CALLBACK_URL_V2}}",
    "scope": ["channels:read", "chat:write:bot", "groups:read"]
  },
  "setupViews": [
    { "label": "Client ID", "type": "text", "controlName": "clientID" },
    { "label": "Client Secret", "type": "password", "controlName": "clientSecret" }
  ]
}
